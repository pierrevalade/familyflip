#left
  .content
    .title{:onclick => "go('#{contacts_path}')"} MY ALBUMS
      
    - if @albums_in_groups[0..1]
      %table.albums
        - @albums_in_groups[0..1].each do |albums|
          = render 'albums', :albums => albums
          
          
    - if @albums_in_groups[2..2]
      %table.albums
        - @albums_in_groups[2..2].each do |albums|
          = render 'albums', :albums => albums
        
    - if @albums.previous_page
      .button
        = link_to image_tag('previous.png'), paged_albums_url(@albums.previous_page)

#right
  .content
  
    - if @albums_in_groups[3..4]
      %table.albums
        - @albums_in_groups[3..4].each do |albums|
          = render 'albums', :albums => albums
          
    - if @albums_in_groups[5..5]
      %table.albums
        - @albums_in_groups[5..5].each do |albums|
          = render 'albums', :albums => albums
  
    - if @albums.next_page
      .button
        = link_to image_tag('next.png'), paged_albums_url(@albums.next_page)

    .clear