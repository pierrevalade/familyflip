:javascript
  $(function() {
    $("#user_session_email").focus();
  });

%h1 Login

- form_for @user_session, :url => user_session_path do |form|
  = hidden_field_tag 'return_path', params[:return_path]
  
  %table.input-form
    %tbody
    
      %tr
        %th
          = form.label :email
        %td.field
          = form.text_field :email, :class => 'title', :size => 25
      
      %tr
        %th
          = form.label :password
        %td.field
          = form.password_field :password, :class => 'title', :size => 25
        %td.help
          /= link_to "Forgot your password?", new_password_reset_url
          
      %tr
        %th
        %td.field
          = form.check_box :remember_me
          = form.label :remember_me, nil, :class => 'inline'
          
      %tr
        %th
        %td.field
          = submit_tag 'Login'